<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <display-name>odhiambo_P1_V3</display-name>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>newemployee</servlet-name>
        <servlet-class>com.davidodhiambo.controller.NewEmployee</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>newemployee</servlet-name>
        <url-pattern>/newemployee</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.davidodhiambo.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.davidodhiambo.controller.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registerClaim</servlet-name>
        <servlet-class>com.davidodhiambo.controller.RegisterClaimServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registerClaim</servlet-name>
        <url-pattern>/registerClaim</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>com.davidodhiambo.controller.HomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Claimprofile</servlet-name>
        <servlet-class>com.davidodhiambo.controller.ClaimProfileServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Claimprofile</servlet-name>
        <url-pattern>/claimprofile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateClaim</servlet-name>
        <servlet-class>com.davidodhiambo.controller.UpdateClaimServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>updateClaim</servlet-name>
        <url-pattern>/updateClaim</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteClaim</servlet-name>
        <servlet-class>com.davidodhiambo.controller.DeleteClaimServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteClaim</servlet-name>
        <url-pattern>/deleteClaim</url-pattern>
    </servlet-mapping>

</web-app>